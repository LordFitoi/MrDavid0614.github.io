---
import WebShowcase from './WebShowcase.astro';
const { imgSrc, imgAlt, href, imgLoading="eager" } = Astro.props;

---

<div class="grow grid grid-cols-3 w-full">
    <div class="flex flex-col items-center justify-center py-[32px] lg:py-[60px] col-span-3 lg:col-span-1">
        <slot></slot>
    </div>
    <div class="p-[20px] lg:p-[32px] rounded-r-full bg-[#FFF] col-span-3 lg:col-span-2 lg:row-start-auto order-first">
        <WebShowcase imgSrc={imgSrc} imgAlt={imgAlt} href={href} imgLoading={imgLoading}>
    </div>
</div>
